<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

      <div class="form-floating">
        <label for="inputEmail" class="sr-only">Email Address</label>
        <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email Adress", autocomplete: "email" %>
      </div>
      <div class="form-floating">
        <label for="inputPassword" class="sr-only" >Password</label>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", id: "inputPassword"  %>
      </div>

      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-muted">© 2020–2024</p>
  <% end %>

  <%= render "devise/shared/links" %>
</section>